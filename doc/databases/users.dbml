Project Prophecy_Users
{
    database_type: 'PostgreSQL'
}

Table profile
{
    username                varchar             [pk, not null, unique]
    email                   varchar             [not null, unique]
    password                varbinary           [not null]
    is_verified             bool                [default: false]
    profile_picture_path    varchar             [note: "profile pictures are not stored in the database"]
}

Table followers
{
    followers               varchar             [pk, ref: > profile.username, not null, unique]
    followee                varchar             [pk, ref: > profile.username, not null, unique]
}

Table blocked
{
    blocker                 varchar             [pk, ref: > profile.username, not null, unique]
    blockee                 varchar             [pk, ref: > profile.username, not null, unique]
}

Table shared_armies
{
    owner                   varchar             [pk, ref: > profile.username, not null, unique]
    id                      varchar             [pk]
}

Table shared_games
{
    owner                   varchar             [pk, ref: > profile.username, not null, unique]
    id                      varchar             [pk, not null, unique]
}


Table shared_statisttics
{
    owner                   varchar             [pk, ref: > profile.username, not null, unique]
    id                      varchar             [pk, not null, unique]
}

Table posts
{
    owner                   varchar             [pk, ref: > profile.username, not null, unique]
    id                      varchar             [not null, unique]
    content                 varchar             [not null, 
                                                    note: "The content contains the post's message and the path to the pictures
                                                    example: This is the post's mesage.\!path_to_posts_pictures"]
}
